    <bundle>
      <groupId>org.apache.stanbol</groupId>
      <artifactId>org.apache.stanbol.enhancer.chain.list</artifactId>
      <version>0.11.0-SNAPSHOT</version>
    </bundle>
  </startLevel>
  
